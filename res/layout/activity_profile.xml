<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/item_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_gray"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin"
                android:background="@color/app_gray" />

            <LinearLayout
                android:id="@+id/ll_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/activity_margin"
                android:paddingRight="@dimen/activity_margin"
                android:paddingTop="10dp"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/title" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="普通会员"
                        android:textColor="@color/deep_gray"
                        android:textSize="@dimen/body" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_gray_selector"
                    android:text="会员升级"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/subhead" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_line"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/item_selector"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/space"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/deep_gray"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_line"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/item_selector"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/space"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="出生日期"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/deep_gray"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_line"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/item_selector"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/space"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="邮箱"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/deep_gray"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_list_item"
                android:background="@drawable/item_selector"
                android:orientation="horizontal"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_line"
                    android:background="@color/line" />

                <LinearLayout
                    android:id="@+id/ll_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_list_item"
                    android:background="@drawable/item_selector"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="@dimen/height_list_item"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_image" />

                    <TextView
                        android:id="@+id/tv_avatar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:paddingBottom="5dp"
                        android:paddingLeft="@dimen/space"
                        android:paddingRight="4dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:text="设置头像"
                        android:textColor="@color/deep_gray"
                        android:textColorHint="@color/login_hint"
                        android:textSize="@dimen/text_input" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_line"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/space"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:text="会员名"
                        android:textColor="@color/black"
                        android:textColorHint="@color/login_hint"
                        android:textSize="@dimen/text_input" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="请输入会员名"
                        android:inputType="text"
                        android:paddingBottom="5dp"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:textColor="@color/deep_gray"
                        android:textColorHint="@color/login_hint"
                        android:textSize="@dimen/text_input" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@drawable/btn_orange_selector"
                android:minWidth="@dimen/edittext_width"
                android:text="编辑资料"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_change_phone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:background="@drawable/btn_gray_selector"
                android:minWidth="@dimen/edittext_width"
                android:text="修改手机"
                android:textColor="@color/orange"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:background="@drawable/btn_gray_selector"
                android:minWidth="@dimen/edittext_width"
                android:text="退出登录"
                android:textColor="@color/orange"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>