<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/item_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_gray"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/ll_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/height_list_item"
                    android:layout_height="@dimen/height_list_item"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar" 
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_avatar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/space"
                    android:paddingRight="4dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="设置头像"
                    android:textColor="@color/deep_gray"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_line"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/space"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="会员名"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请输入会员名"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:paddingRight="@dimen/activity_margin"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/deep_gray"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_line"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/ll_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/item_selector"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/space"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/activity_margin"
	                android:orientation="horizontal" 
	                android:gravity="center_vertical|right">
	                
                    <TextView
		            	android:id="@+id/tv_sex_boy"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:drawableLeft="@drawable/ic_circle_off"
		                android:drawablePadding="4dp"
		                android:gravity="center"
		                android:text="男"
		            	android:textSize="@dimen/subhead"
		                android:textColor="@color/light_gray" />
	                
                    <TextView
		            	android:id="@+id/tv_sex_girl"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:drawableLeft="@drawable/ic_circle_off"
		                android:layout_marginLeft="@dimen/activity_margin"
		                android:drawablePadding="4dp"
		                android:gravity="center"
		                android:text="女"
		            	android:textSize="@dimen/subhead"
		                android:textColor="@color/light_gray" />
                    
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_line"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/ll_birthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/item_selector"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/space"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="出生日期"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="4dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/deep_gray"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_line"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/item_selector"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/space"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="邮箱"
                    android:textColor="@color/black"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请输入邮箱"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="5dp"
                    android:paddingRight="@dimen/activity_margin"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/deep_gray"
                    android:textColorHint="@color/login_hint"
                    android:textSize="@dimen/text_input" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin"
                android:background="@color/line" />

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_orange_selector"
                android:minWidth="@dimen/edittext_width"
                android:text="保存资料"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>